    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ]
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*.ts",
    "*.ts"
  ]
}